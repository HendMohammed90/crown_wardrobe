{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",  // For React 17+
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]  // Optional: for aliasing
    },
    "composite": true 
  },
  "include": ["src/**/*.ts",
    "src/**/*.tsx" ,
    "src/pages/Shop/components/CategoriesPreview/CategoriesPreview.tsx",
    "src/pages/Shop/components/CategoryPreview/CategoryPreview.tsx",

],
  "exclude": ["node_modules" ,"build"
]
}

